<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ Change Password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="20dp" />

        <!-- Security Notice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/security_notice_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_security_warning"
                android:layout_marginEnd="8dp"
                app:tint="#FF9800" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="For security reasons, please enter your current password to confirm your identity."
                android:textSize="12sp"
                android:textColor="#424242"
                android:fontFamily="@font/quicksand"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Current Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="#1976D2"
            app:hintTextColor="#1976D2"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:fontFamily="@font/quicksand" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- New Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="#1976D2"
            app:hintTextColor="#1976D2"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password (min. 6 characters)"
                android:inputType="textPassword"
                android:fontFamily="@font/quicksand" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm New Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:boxStrokeColor="#1976D2"
            app:hintTextColor="#1976D2"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:fontFamily="@font/quicksand" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Requirements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/password_requirements_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Requirements:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:fontFamily="@font/quicksand"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Minimum 6 characters\nâ€¢ Different from current password\nâ€¢ Use combination of letters and numbers for better security"
                android:textSize="11sp"
                android:textColor="#757575"
                android:fontFamily="@font/quicksand"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="@drawable/button_cancel"
                android:textColor="#757575"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangePassword"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Change Password"
                android:background="@drawable/button_change_password"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
