<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/card_background"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Pengaturan Admin"
        app:titleTextColor="@color/text_primary"
        app:navigationIconTint="@color/primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¨ Pengaturan Aplikasi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="16dp" />

                    <!-- Dark Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mode Gelap"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aktifkan tema gelap untuk panel admin"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/primary"
                            app:trackTint="#BBDEFB" />

                    </LinearLayout>

                    <!-- Notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notifikasi Push"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terima notifikasi admin"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="#4CAF50"
                            app:trackTint="#C8E6C9" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- System Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”§ Pengaturan Sistem"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="16dp" />

                    <!-- Auto Backup -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Backup Otomatis"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Backup harian otomatis pukul 02:00"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchAutoBackup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="#FF9800"
                            app:trackTint="#FFE0B2" />

                    </LinearLayout>

                    <!-- Security Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keamanan Tinggi"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aktifkan fitur keamanan tambahan"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchSecurityMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/primary"
                            app:trackTint="#BBDEFB" />

                    </LinearLayout>

                    <!-- Maintenance Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mode Maintenance"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cegah user mengakses aplikasi"
                                android:textSize="12sp"
                                android:textColor="#F44336"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchMaintenanceMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="#F44336"
                            app:trackTint="#FFCDD2" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Data Management -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¾ Manajemen Data"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="16dp" />

                    <!-- Backup Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvLastBackup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Backup terakhir: Belum pernah"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/quicksand" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnManualBackup"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Backup"
                            android:textSize="11sp"
                            android:background="@drawable/button_primary_blue"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/quicksand"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                    </LinearLayout>

                    <!-- Data Actions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnClearCache"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="ðŸ—‘ï¸ Clear Cache"
                            android:textSize="12sp"
                            android:background="@drawable/button_outline_blue"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginEnd="8dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnExportData"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="ðŸ“¤ Export"
                            android:textSize="12sp"
                            android:background="@drawable/button_primary_blue"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/quicksand" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- System Information -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â„¹ï¸ Sistem dan Tentang"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSystemInfo"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="ðŸ“± Info Sistem"
                            android:textSize="12sp"
                            android:background="@drawable/button_outline_blue"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginEnd="8dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnAbout"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="â„¹ï¸ Tentang"
                            android:textSize="12sp"
                            android:background="@drawable/button_outline_blue"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/quicksand" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnResetSettings"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="âš ï¸ Reset Semua Pengaturan"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_red"
                        android:textColor="@color/status_error"
                        android:fontFamily="@font/quicksand" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>