<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil Pengguna"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:fontFamily="@font/quicksand"
                android:layout_marginBottom="20dp" />

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- Profile Avatar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#E3F2FD"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/ivProfileAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <!-- Profile Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="johndoe@email.com"
                            android:textSize="13sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tvSubscriptionStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trial"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="@drawable/subscription_badge_trial"
                                android:fontFamily="@font/quicksand"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp" />

                            <TextView
                                android:id="@+id/tvTrialDaysLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 hari tersisa"
                                android:textSize="11sp"
                                android:textColor="#FF5722"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Edit Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#E3F2FD">

                        <ImageButton
                            android:id="@+id/btnEditProfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_edit"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            android:padding="8dp"
                            app:tint="#4A90E2" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Subscription Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSubscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#4A90E2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_info"
                            app:tint="#FFD700"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upgrade ke Premium"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dapatkan akses unlimited dan konsultasi dokter"
                                android:textSize="12sp"
                                android:textColor="#E0FFFFFF"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnUpgradePremium"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:text="Upgrade"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:background="@drawable/button_upgrade"
                            android:textColor="#4A90E2"
                            android:fontFamily="@font/quicksand"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Statistics Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistik Penggunaan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Total Scan -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_card_background"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvTotalScans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#4A90E2"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Scan"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Healthy Cattle -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_card_background"
                            android:padding="16dp"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvHealthyCattle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sapi Sehat"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Diseased Cattle -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_card_background"
                            android:padding="16dp"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvDiseasedCattle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#F44336"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sapi Sakit"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Menu Options -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="90dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Edit Profile -->
                    <LinearLayout
                        android:id="@+id/menuEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#E3F2FD"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_edit"
                                android:padding="6dp"
                                android:layout_gravity="center"
                                app:tint="#4A90E2" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Edit Profil"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#BDBDBD" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F5F5F5"
                        android:layout_marginStart="56dp" />

                    <!-- Subscription Management -->
                    <LinearLayout
                        android:id="@+id/menuSubscription"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#FFF3E0"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:padding="6dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_info"
                                app:tint="#FFB300" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kelola Langganan"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#BDBDBD" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F5F5F5"
                        android:layout_marginStart="56dp" />

                    <!-- Settings -->
                    <LinearLayout
                        android:id="@+id/menuSettings"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#F5F5F5"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_settings"
                                android:layout_gravity="center"
                                android:padding="6dp"
                                app:tint="#757575" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pengaturan"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#BDBDBD" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F5F5F5"
                        android:layout_marginStart="56dp" />

                    <!-- Help & Support -->
                    <LinearLayout
                        android:id="@+id/menuHelp"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#F5F5F5"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_help"
                                android:layout_gravity="center"
                                android:padding="6dp"
                                app:tint="#757575" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bantuan dan Dukungan"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#BDBDBD" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F5F5F5"
                        android:layout_marginStart="56dp" />

                    <!-- Logout -->
                    <LinearLayout
                        android:id="@+id/menuLogout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#FFEBEE"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_logout"
                                android:layout_gravity="center"
                                android:padding="6dp"
                                app:tint="#F44336" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Keluar"
                            android:textSize="14sp"
                            android:textColor="#F44336"
                            android:fontFamily="@font/quicksand" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:layout_gravity="center"
                            app:tint="#F44336" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>