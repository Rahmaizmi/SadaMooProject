<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Payment Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPaymentId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAY000001"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand" />

                <TextView
                    android:id="@+id/tvTransactionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27 Oct 2024, 14:30"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/status_pending"
                android:padding="6dp" />

        </LinearLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_avatar"
                    android:scaleType="centerCrop"
                    android:background="#E3F2FD" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahmad Santoso"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ahmad@email.com"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

        </LinearLayout>

        <!-- Payment Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/payment_details_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Package:"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/quicksand" />

                <TextView
                    android:id="@+id/tvPackageType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount:"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/quicksand" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 120.000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Method:"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/quicksand" />

                <TextView
                    android:id="@+id/tvPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QRIS"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPaymentCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code: SADA123456"
                android:textSize="11sp"
                android:textColor="#9E9E9E"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

        <!-- Verified Date (if completed) -->
        <TextView
            android:id="@+id/tvVerifiedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verified: 27 Oct 2024, 15:00"
            android:textSize="11sp"
            android:textColor="#4CAF50"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_verified"
            android:drawablePadding="4dp" />

        <!-- Action Buttons -->
        <!-- Action Buttons - Update bagian ini -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnViewProof"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="View Proof"
                android:textSize="11sp"
                android:background="@drawable/button_view_proof"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVerify"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Verify"
                android:textSize="11sp"
                android:background="@drawable/button_verify"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="4dp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textSize="11sp"
                android:background="@drawable/button_reject"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="4dp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRefund"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Refund"
                android:textSize="11sp"
                android:background="@drawable/button_refund"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
