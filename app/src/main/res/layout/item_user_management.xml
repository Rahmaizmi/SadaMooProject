<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- User Avatar -->
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:background="#E3F2FD" />

            </androidx.cardview.widget.CardView>

            <!-- User Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="John Doe"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/quicksand"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Role Badge -->
                    <TextView
                        android:id="@+id/tvRoleBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ User"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/badge_user"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john@example.com"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvUserPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+62 812 3456 7890"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <!-- Ban Status Badge -->
            <TextView
                android:id="@+id/tvBanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš«"
                android:textSize="24sp"
                android:visibility="gone"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Subscription Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvSubscriptionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/subscription_badge_premium"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSubscriptionDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Premium until 31 Dec 2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/quicksand"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Stats and Join Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTotalScans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“Š 12 scans"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/quicksand" />

            <TextView
                android:id="@+id/tvJoinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… 15 Oct 2024"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:fontFamily="@font/quicksand" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditUser"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="âœï¸ Edit"
                android:textSize="12sp"
                android:background="@drawable/button_outline_blue"
                android:textColor="@color/primary"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangeSubscription"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="ðŸ’³ Plan"
                android:textSize="12sp"
                android:background="@drawable/button_outline_blue"
                android:textColor="@color/primary"
                android:fontFamily="@font/quicksand"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBanUser"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="ðŸš« Ban"
                android:textSize="12sp"
                android:background="@drawable/button_outline_red"
                android:textColor="@color/status_error"
                android:fontFamily="@font/quicksand"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <ImageButton
                android:id="@+id/btnDeleteUser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                android:background="@drawable/button_circle_red"
                app:tint="@android:color/white"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>