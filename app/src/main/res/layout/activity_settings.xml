<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:backgroundTint="#E3F2FD">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="8dp"
                app:tint="#4A90E2" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pengaturan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="@font/quicksand"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- General Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#4A90E2"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pengaturan Umum"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                    </LinearLayout>

                    <!-- Notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/setting_item_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notifikasi"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terima notifikasi untuk hasil scan"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#4A90E2"
                            app:trackTintMode="src_over" />

                    </LinearLayout>

                    <!-- Dark Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/setting_item_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mode Gelap"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aktifkan tema gelap"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#4A90E2"
                            app:trackTintMode="src_over" />

                    </LinearLayout>

                    <!-- Auto Scan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/setting_item_background"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auto Scan"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Otomatis scan saat kamera terbuka"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchAutoScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#4A90E2"
                            app:trackTintMode="src_over" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Data & Storage -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#FF9800"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data dan Penyimpanan"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                    </LinearLayout>

                    <!-- Data Saver -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/setting_item_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mode Hemat Data"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kurangi penggunaan data internet"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchDataSaver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#4A90E2"
                            app:trackTintMode="src_over" />

                    </LinearLayout>

                    <!-- Clear Cache -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnClearCache"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Bersihkan Cache"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline_blue"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="12dp" />

                    <!-- Reset Settings -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnResetSettings"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Reset Pengaturan"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline_red"
                        android:textColor="#F44336"
                        android:fontFamily="@font/quicksand" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>