<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Profil Admin"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola akun administrator"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Profile Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Profile Photo -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#E3F2FD"
                        android:layout_marginEnd="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ivAdminPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_profile"
                                android:scaleType="centerCrop" />

                            <ProgressBar
                                android:id="@+id/progressUpload"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:indeterminateTint="@color/primary" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Profile Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAdminName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Administrator"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/quicksand" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/tvAdminRole"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Super Admin"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="@drawable/badge_admin"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAdminEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="admin@sadamoo.com"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="16dp" />

                <!-- Contact Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž Informasi Kontak"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/stat_item_background"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nomor Telepon:"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/quicksand" />

                        <TextView
                            android:id="@+id/tvAdminPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+62 812 3456 7890"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/quicksand" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="âœï¸ Edit"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_blue"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginEnd="8dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnChangePhoto"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="ðŸ“· Foto"
                        android:textSize="12sp"
                        android:background="@drawable/button_primary_blue"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quicksand" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Admin Statistics -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Statistik Sistem"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Total Users -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalUsers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:fontFamily="@font/quicksand" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Users"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <!-- Total Diseases -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalDiseases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800"
                            android:fontFamily="@font/quicksand" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diseases"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Notifications -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/quicksand" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notifikasi"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <!-- Today Scans -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/stat_item_background"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTodayScans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#F44336"
                            android:fontFamily="@font/quicksand" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan Hari Ini"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Account Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ Pengaturan Akun"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnChangePassword"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="ðŸ” Password"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_blue"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginEnd="4dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSettings"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="âš™ï¸ Settings"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_blue"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLogout"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="ðŸšª Logout"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline_red"
                        android:textColor="@color/status_error"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>