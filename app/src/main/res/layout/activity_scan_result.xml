<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Image Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivScannedImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sapi_madura" />

                    <!-- Gradient Overlay -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient_overlay" />

                    <!-- Cattle Type Label -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tvCattleType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sapi Madura"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/quicksand"
                            android:shadowColor="#80000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="4" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Accuracy & Health Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Accuracy Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_scan"
                            app:tint="#4A90E2"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Akurasi Deteksi"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:id="@+id/tvConfidence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="95.2%"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="#4A90E2"
                                android:fontFamily="@font/quicksand" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp" />

                    <!-- Health Status Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_info"
                            app:tint="#4CAF50"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status Kesehatan"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="@font/quicksand" />

                            <TextView
                                android:id="@+id/tvHealthStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sapi Anda Sehat"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"
                                android:fontFamily="@font/quicksand" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Disease Information Section (Hidden by default) -->
            <LinearLayout
                android:id="@+id/layoutDiseaseInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Disease Overview Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="28dp"
                                android:background="#F44336"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Informasi Penyakit"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDiseaseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lumpy Skin Disease (LSD)"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#F44336"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvScientificName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capripoxvirus"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E"
                            android:fontFamily="@font/quicksand"
                            android:fontStyle="italic"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvDiseaseDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Penyakit kulit menular pada sapi yang disebabkan oleh virus capripox."
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="@font/quicksand"
                            android:lineSpacingExtra="3dp"
                            android:layout_marginBottom="16dp" />

                        <!-- Severity and Contagious Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginEnd="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_info"
                                    app:tint="#F44336"
                                    android:layout_marginEnd="6dp" />

                                <TextView
                                    android:id="@+id/tvSeverity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Berat"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#F44336"
                                    android:fontFamily="@font/quicksand" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_info"
                                    app:tint="#FF9800"
                                    android:layout_marginEnd="6dp" />

                                <TextView
                                    android:id="@+id/tvContagiousStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Menular"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#FF9800"
                                    android:fontFamily="@font/quicksand" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Symptoms -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:background="#4A90E2"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gejala yang Terlihat"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSymptoms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Benjolan keras pada kulit\nâ€¢ Demam tinggi\nâ€¢ Penurunan nafsu makan"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="@font/quicksand"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Causes -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:background="#FF9800"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Penyebab Penyakit"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCauses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Virus Capripox\nâ€¢ Penularan melalui serangga\nâ€¢ Kontak langsung dengan hewan terinfeksi"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="@font/quicksand"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Treatments -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:background="#4CAF50"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cara Mengatasi"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTreatments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Isolasi hewan yang terinfeksi\nâ€¢ Pemberian antibiotik\nâ€¢ Perawatan luka dengan antiseptik"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="@font/quicksand"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Prevention -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:background="#9C27B0"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pencegahan"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:fontFamily="@font/quicksand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvPrevention"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Vaksinasi rutin\nâ€¢ Kontrol serangga vektor\nâ€¢ Karantina hewan baru"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="@font/quicksand"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Economic Loss Warning -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="90dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:background="@drawable/card_warning_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_info"
                                app:tint="#FF9800"
                                android:layout_marginEnd="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimasi Kerugian"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#E65100"
                                android:fontFamily="@font/quicksand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvEstimatedLoss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 15.000.000"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="per ekor sapi jika tidak segera ditangani"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginBottom="12dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡ Segera konsultasi dengan dokter hewan untuk penanganan yang tepat dan mencegah penyebaran ke ternak lainnya."
                            android:textSize="13sp"
                            android:textColor="#424242"
                            android:fontFamily="@font/quicksand"
                            android:lineSpacingExtra="3dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/navBack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Kembali"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4A90E2"
            android:fontFamily="@font/quicksand"
            android:background="@drawable/button_outline_blue"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/navSave"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Simpan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/quicksand"
            android:background="@drawable/button_primary_blue"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/navConsultation"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Konsultasi"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/quicksand"
            android:background="@drawable/button_secondary_orange" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>