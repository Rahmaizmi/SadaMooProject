<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ’³ Detail Pembayaran"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand" />

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_close"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    app:tint="#757575" />

            </LinearLayout>

            <!-- Payment Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvPaymentCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SADA123456"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvPackageInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paket Premium - 6 Bulan"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 122.500"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menunggu Verifikasi"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

            <!-- Dates -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvSubmittedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dikirim: 27 Oct 2024, 14:30"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvVerifiedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diverifikasi: 27 Oct 2024, 15:45"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/quicksand"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Payment Proof -->
            <ImageView
                android:id="@+id/ivPaymentProof"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_preview_background"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Notes -->
            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menunggu verifikasi admin (1x24 jam)"
                android:textSize="14sp"
                android:textColor="#424242"
                android:fontFamily="@font/quicksand"
                android:background="@drawable/notes_background"
                android:padding="12dp" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>
