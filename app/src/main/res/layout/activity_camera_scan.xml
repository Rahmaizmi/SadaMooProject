<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dark Overlay for Dimming -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#40000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Bar with Gradient -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/gradient_top_overlay"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:backgroundTint="#40FFFFFF">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:tint="@android:color/white" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deteksi Penyakit"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:layout_marginEnd="16dp" />

        <!-- Flash Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:backgroundTint="#40FFFFFF">

            <ImageButton
                android:id="@+id/btnFlash"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_flash_off"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:tint="@android:color/white" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Scanning Frame Container -->
    <FrameLayout
        android:id="@+id/scanFrameContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85">

        <!-- Scan Frame Border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scan_frame_border" />

        <!-- Corner Decorations -->
        <!-- Top Left Corner -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#4A90E2"
            android:layout_gravity="top|start" />
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#4A90E2"
            android:layout_gravity="top|start" />

        <!-- Top Right Corner -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#4A90E2"
            android:layout_gravity="top|end" />
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#4A90E2"
            android:layout_gravity="top|end" />

        <!-- Bottom Left Corner -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#4A90E2"
            android:layout_gravity="bottom|start" />
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#4A90E2"
            android:layout_gravity="bottom|start" />

        <!-- Bottom Right Corner -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#4A90E2"
            android:layout_gravity="bottom|end" />
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#4A90E2"
            android:layout_gravity="bottom|end" />

        <!-- Scanning Line Animation -->
        <View
            android:id="@+id/viewScanLine"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/scan_line_gradient"
            android:layout_marginTop="0dp" />

        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:backgroundTint="#CC000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¸ Posisikan sapi di dalam frame"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="@font/quicksand"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Bottom Controls Bar -->
    <LinearLayout
        android:id="@+id/bottomControlsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_bottom_overlay"
        android:paddingTop="24dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Control Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <!-- Gallery Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#40FFFFFF">

                    <ImageButton
                        android:id="@+id/btnGallery"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_gallery"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:scaleType="centerInside"
                        android:padding="14dp"
                        app:tint="@android:color/white" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galeri"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Capture Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="@android:color/white">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabCapture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_camera_capture"
                        android:backgroundTint="@android:color/white"
                        android:scaleType="center"
                        android:padding="0dp"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:maxImageSize="40dp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambil Foto"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Switch Camera Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#40FFFFFF">

                    <ImageButton
                        android:id="@+id/btnSwitchCamera"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_switch_camera"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:scaleType="centerInside"
                        android:padding="14dp"
                        app:tint="@android:color/white" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Putar"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Scanning Overlay -->
    <FrameLayout
        android:id="@+id/layoutScanning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <!-- Animated Progress Circle -->
                <ProgressBar
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:indeterminateTint="#4A90E2"
                    android:layout_marginBottom="20dp" />

                <!-- Scanning Text -->
                <TextView
                    android:id="@+id/tvScanningText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menganalisis gambar..."
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohon tunggu sebentar"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:fontFamily="@font/quicksand"
                    android:textAlignment="center"
                    android:layout_marginBottom="24dp" />

                <!-- Progress Dots -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/progress_dot"
                        android:backgroundTint="#4A90E2"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/progress_dot"
                        android:backgroundTint="#80B3D9"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/progress_dot"
                        android:backgroundTint="#B3D9ED" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>