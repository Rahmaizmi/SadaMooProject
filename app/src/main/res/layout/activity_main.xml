<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation" />

    <!-- Bottom Navigation dengan Style Baru -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Beranda -->
        <LinearLayout
            android:id="@+id/navBeranda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                style="@style/NavIcon"
                android:src="@drawable/ic_home"
                app:tint="@color/nav_active" />

            <TextView
                style="@style/NavLabelActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda" />

        </LinearLayout>

        <!-- Informasi -->
        <LinearLayout
            android:id="@+id/navInformasi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                style="@style/NavIcon"
                android:src="@drawable/ic_info"
                app:tint="@color/nav_inactive" />

            <TextView
                style="@style/NavLabelInactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi" />

        </LinearLayout>

        <!-- FAB Deteksi (Center) dengan Style -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabDeteksi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_scan"
                android:backgroundTint="@color/blue_primary"
                app:tint="@android:color/white"
                app:borderWidth="0dp"
                app:elevation="8dp"
                app:rippleColor="@color/blue_light" />

            <TextView
                style="@style/NavLabelActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deteksi"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp" />

        </FrameLayout>

        <!-- Riwayat -->
        <LinearLayout
            android:id="@+id/navRiwayat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                style="@style/NavIcon"
                android:src="@drawable/ic_history"
                app:tint="@color/nav_inactive" />

            <TextView
                style="@style/NavLabelInactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat" />

        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:id="@+id/navProfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                style="@style/NavIcon"
                android:src="@drawable/ic_profile"
                app:tint="@color/nav_inactive" />

            <TextView
                style="@style/NavLabelInactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>