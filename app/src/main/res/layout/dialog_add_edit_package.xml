<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="700dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Package"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/quicksand"
                android:layout_marginBottom="20dp" />

            <!-- Package Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#1976D2"
                app:hintTextColor="#1976D2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPackageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Package Name (e.g., Premium)"
                    android:inputType="text"
                    android:fontFamily="@font/quicksand" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Package Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#1976D2"
                app:hintTextColor="#1976D2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPackageDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Package Description"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:fontFamily="@font/quicksand" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Price -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#1976D2"
                app:hintTextColor="#1976D2"
                app:prefixText="Rp ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price (e.g., 120000)"
                    android:inputType="number"
                    android:fontFamily="@font/quicksand" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Duration Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration Type"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMonth"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Month"
                        android:textSize="12sp"
                        android:background="@drawable/duration_type_active"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginEnd="8dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnYear"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Year"
                        android:textSize="12sp"
                        android:background="@drawable/duration_type_inactive"
                        android:textColor="#1976D2"
                        android:fontFamily="@font/quicksand" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="#1976D2"
                    app:hintTextColor="#1976D2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Duration in months (e.g., 1, 3, 6)"
                        android:inputType="number"
                        android:fontFamily="@font/quicksand" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Features Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/features_section_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Package Features"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:fontFamily="@font/quicksand" />

                    <TextView
                        android:id="@+id/tvFeatureCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 features"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/quicksand" />

                </LinearLayout>

                <!-- Add Feature Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etNewFeature"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:hint="Enter feature (e.g., Unlimited scans)"
                        android:background="@drawable/feature_input_background"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginEnd="8dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAddFeature"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Add"
                        android:textSize="12sp"
                        android:background="@drawable/button_add_feature"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quicksand"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

                <!-- Features List -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/features_list_background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvFeaturesList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No features added yet"
                        android:textSize="12sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/quicksand"
                        android:lineSpacingExtra="4dp" />

                </ScrollView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnClearFeatures"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Clear All Features"
                    android:textSize="11sp"
                    android:background="@drawable/button_clear_features"
                    android:textColor="#F44336"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Package Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Package Status"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:fontFamily="@font/quicksand" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchIsActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="#4CAF50"
                    app:trackTint="#C8E6C9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:background="@drawable/button_cancel"
                    android:textColor="#757575"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Save Package"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>

