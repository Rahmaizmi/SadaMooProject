<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_blue_dark"
                android:padding="24dp"
                android:gravity="center">

                <!-- Avatar dengan Border -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Border luar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="55dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="@android:color/white">

                        <!-- Lingkaran foto -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#E3F2FD">

                            <ImageView
                                android:id="@+id/imgDoctorAvatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_admin_profile"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <!-- Tombol kamera -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabEditPhoto"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/ic_camera"
                        app:fabCustomSize="36dp"
                        app:maxImageSize="18dp"
                        android:backgroundTint="@color/blue_primary"
                        app:tint="@android:color/white"/>
                </FrameLayout>


                <!-- Doctor Name -->
                <TextView
                    android:id="@+id/tvDoctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dr. Nama Dokter"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/quicksand"/>

                <!-- Specialization -->
                <TextView
                    android:id="@+id/tvSpecialization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Dokter Hewan"
                    android:textSize="14sp"
                    android:textColor="#E0FFFFFF"
                    android:fontFamily="@font/quicksand"/>

                <!-- Verification Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/verified_badge_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ“"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terverifikasi"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Dokter"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_primary"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="16dp"/>

                <!-- Email -->
                <LinearLayout
                    style="@style/ProfileInfoItem">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“§"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="12sp"
                            android:textColor="@color/darker_gray"
                            android:fontFamily="@font/quicksand"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="dokter@sadamoo.com"
                            android:textSize="14sp"
                            android:textColor="@color/blue_primary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/Divider"/>

                <!-- Phone -->
                <LinearLayout
                    style="@style/ProfileInfoItem">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“±"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No. Telepon"
                            android:textSize="12sp"
                            android:textColor="@color/darker_gray"
                            android:fontFamily="@font/quicksand"/>

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+62 812 3456 7890"
                            android:textSize="14sp"
                            android:textColor="@color/blue_primary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/Divider"/>

                <!-- License -->
                <LinearLayout
                    style="@style/ProfileInfoItem">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No. STR"
                            android:textSize="12sp"
                            android:textColor="@color/darker_gray"
                            android:fontFamily="@font/quicksand"/>

                        <TextView
                            android:id="@+id/tvLicense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789012345"
                            android:textSize="14sp"
                            android:textColor="@color/blue_primary"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Options -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <!-- Edit Profile -->
                <LinearLayout
                    android:id="@+id/btnEditProfile"
                    style="@style/ProfileMenuItem">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœï¸"
                        android:textSize="24sp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edit Profil"
                        android:textSize="15sp"
                        android:textColor="@color/blue_primary"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/darker_gray"/>

                </LinearLayout>

                <View style="@style/Divider"/>

                <!-- Change Password -->
                <LinearLayout
                    android:id="@+id/btnChangePassword"
                    style="@style/ProfileMenuItem">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”’"
                        android:textSize="24sp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ubah Password"
                        android:textSize="15sp"
                        android:textColor="@color/blue_primary"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/darker_gray"/>

                </LinearLayout>

                <View style="@style/Divider"/>

                <!-- Settings -->
                <LinearLayout
                    android:id="@+id/btnSettings"
                    style="@style/ProfileMenuItem">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš™ï¸"
                        android:textSize="24sp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pengaturan"
                        android:textSize="15sp"
                        android:textColor="@color/blue_primary"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/darker_gray"/>

                </LinearLayout>

                <View style="@style/Divider"/>

                <!-- Help -->
                <LinearLayout
                    android:id="@+id/btnHelp"
                    style="@style/ProfileMenuItem">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â“"
                        android:textSize="24sp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bantuan"
                        android:textSize="15sp"
                        android:textColor="@color/blue_primary"
                        android:fontFamily="@font/quicksand"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/darker_gray"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="Keluar"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"
            android:textColor="@android:color/white"
            app:backgroundTint="#F44336"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_logout"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            android:elevation="2dp"/>

        <!-- Version Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sada Moo Doctor v1.0.0"
            android:textSize="12sp"
            android:textColor="@color/darker_gray"
            android:fontFamily="@font/quicksand"
            android:layout_marginBottom="24dp"/>

        <!-- Spacer untuk Bottom Navigation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

</ScrollView>