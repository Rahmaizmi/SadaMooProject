<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:backgroundTint="#E3F2FD"
            android:layout_marginEnd="14dp">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_scan"
                android:padding="10dp"
                app:tint="#4A90E2" />

        </androidx.cardview.widget.CardView>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title Row with Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scan Sapi Madura"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Severity Badge (Hidden by default) -->
                <TextView
                    android:id="@+id/tvSeverity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/severity_badge_small"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Subtitle with Confidence -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Terdeteksi: Lumpy Skin Disease"
                    android:textSize="13sp"
                    android:textColor="#616161"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Confidence Badge (Hidden by default) -->
                <TextView
                    android:id="@+id/tvConfidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#4A90E2"
                    android:background="@drawable/confidence_badge"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Date and Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_time"
                    app:tint="#9E9E9E"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15 Des 2024, 14:30"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:fontFamily="@font/quicksand" />

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“ Selesai"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/quicksand" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="#BDBDBD"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>