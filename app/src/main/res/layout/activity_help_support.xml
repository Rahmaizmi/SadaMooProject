<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:backgroundTint="#E3F2FD">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Kembali"
                app:tint="#4A90E2" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bantuan &amp; Dukungan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="@font/quicksand"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contact Support -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#4A90E2"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hubungi Kami"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                    </LinearLayout>

                    <!-- Phone Support -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnContactSupport"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ðŸ“ž Hubungi Support"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_primary_blue"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false"
                        android:layout_marginBottom="10dp" />

                    <!-- Email Support -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnEmailSupport"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="âœ‰ï¸ Email Support"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline_blue"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false"
                        android:layout_marginBottom="10dp" />

                    <!-- WhatsApp Support -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnWhatsappSupport"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ðŸ’¬ WhatsApp Support"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_whatsapp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Quick Actions -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#FF9800"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aksi Cepat"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                    </LinearLayout>

                    <!-- User Guide -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnUserGuide"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ðŸ“– Panduan Pengguna"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline_blue"
                        android:textColor="#4A90E2"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false"
                        android:layout_marginBottom="10dp" />

                    <!-- Report Bug -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnReportBug"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ðŸ› Laporkan Bug"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline_red"
                        android:textColor="#F44336"
                        android:fontFamily="@font/quicksand"
                        android:textAllCaps="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#4CAF50"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FAQ (Pertanyaan Sering Diajukan)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:fontFamily="@font/quicksand" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvFaqContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Memuat FAQ..."
                        android:textSize="13sp"
                        android:textColor="#616161"
                        android:fontFamily="@font/quicksand"
                        android:lineSpacingExtra="4dp"
                        android:textIsSelectable="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>